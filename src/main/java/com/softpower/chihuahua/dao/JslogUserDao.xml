<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.softpower.chihuahua.dao.JslogUserDao">

	<select id="read" resultType="com.softpower.chihuahua.entity.JslogUser">
		SELECT * FROM jslog_user WHERE id = #{id}
	</select>
	
	<select id="readAll" resultType="com.softpower.chihuahua.entity.JslogUser">
		SELECT *
		  FROM jslog_user
		<where>
			<if test="cond.name != null">
				AND name LIKE '${cond.name}%'
			</if>
			<if test="cond.sysStatus != null">
				AND sys_status = #{cond.sysStatus}
			</if>
		</where>
	</select>
	
	<select id="findByName" resultType="com.softpower.chihuahua.entity.JslogUser">
		SELECT * FROM jslog_user WHERE name = #{name}
	</select>
	
	<select id="findByEmail" resultType="com.softpower.chihuahua.entity.JslogUser">
		SELECT * FROM jslog_user WHERE email = #{email}
	</select>

</mapper>